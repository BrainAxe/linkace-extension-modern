{
  "manifest_version": 3,
  "name": "LinkAce Extension",
  "version": "1.0.0",
  "description": "A modern Chrome extension for LinkAce",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "LinkAce Extension"
  },
  "omnibox": {
    "keyword": "l"
  }
}
